<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agro_town">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgroTown">
        <activity
            android:name=".messages.ChatActivity"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            android:exported="true" />
        <activity
            android:name=".messages.MainActivityMessages"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            android:exported="true" />
        <activity
            android:name=".messages.NewMessageActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.DashboardActivity"
            android:exported="true"
            android:label="@string/title_dashboard"
            android:theme="@style/Theme.AgroTownActionBar" />
        <activity
            android:name=".activities.UserProfileActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".activities.BaseActivity"
            android:exported="true" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>