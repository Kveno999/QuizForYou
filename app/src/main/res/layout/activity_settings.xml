<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.SettingsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_settings"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bold"
            android:textSize="25dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/edit_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/green"
            android:fontFamily="@font/regular"
            android:backgroundTint="@color/white"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp">

        <ImageView
            android:id="@+id/img_profile_settings"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/placeholder"
            android:scaleType="fitXY" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_profile_background" />
    </FrameLayout>


    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/svg_person" />

        <TextView
            android:id="@+id/first_name_settings"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kveno Kveno"
            android:fontFamily="@font/regular"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/svg_gender" />

        <TextView
            android:id="@+id/gender_settings"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:fontFamily="@font/regular"
            android:layout_gravity="center"/>

    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:lottie_rawRes="@raw/animation8"
            android:background="@drawable/svg_email__1_" />

        <TextView
            android:id="@+id/email_settings"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/regular"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:lottie_rawRes="@raw/animation9"
            android:background="@drawable/svg_mobile_number" />

        <TextView
            android:id="@+id/number_settings"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:fontFamily="@font/regular"
            android:layout_gravity="center"/>
    </FrameLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Addresses"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp">

        <EditText
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:padding="20dp"
            android:id="@+id/adress_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_input"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/button_logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="LOGOUT"
        android:fontFamily="@font/regular"/>

</LinearLayout>